@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">

    <div class="row border p-1 mt-3">
        <h3>Subscribed List: </h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <label style="color:#B52033" id="lbl_houseJoined">Subscribed House Names</label>
            </div>
        </div>
    </div>
    <div class="row border p-1 mt-3">
        <h3>Subscribe: </h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <button class="btn" style="background-color:#B52033" id="btn_gryffindor">Gryffindor</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#236E50" id="btn_slytherin">Slytherin</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#EDB526" id="btn_hufflepuff">Hufflepuff</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#10749F" id="btn_ravenclaw">Ravenclaw</button>
            </div>
        </div>
    </div>
    <div class="row border p-1 mt-3">
        <h3>Unsubscribe: </h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <button class="btn" style="background-color:#B52033;display:none;" id="btn_un_gryffindor">Gryffindor</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#236E50;display:none;" id="btn_un_slytherin">Slytherin</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#EDB526;display:none;" id="btn_un_hufflepuff">Hufflepuff</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#10749F;display:none;" id="btn_un_ravenclaw">Ravenclaw</button>
            </div>
        </div>
    </div>
    <div class="row border p-1 mt-3">
        <h3>Trigger Notification: </h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <button class="btn" style="background-color:#B52033" id="trigger_gryffindor">Gryffindor</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#236E50" id="trigger_slytherin">Slytherin</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#EDB526" id="trigger_hufflepuff">Hufflepuff</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#10749F" id="trigger_ravenclaw">Ravenclaw</button>
            </div>
        </div>
    </div>
    <div class="row border p-1">
        <h3>Deathly Hallow Race </h3>
        <div class="col-4">
            <div>Invisibility Cloak - <span id="cloakCounter"></span></div>

        </div>
        <div class="col-4">
            <div>Resurrection Stone - <span id="stoneCounter"></span></div>

        </div>
        <div class="col-4">
            <div>Elder Wand - <span id="wandCounter"></span></div>

        </div>
        <hr />
        <p>Url to Vote:</p>
        <div>1. Invisibility Cloak - https://localhost:7001/DeathlyHallows?type=cloak </div>
        <div>2. Resurrection Stone - https://localhost:7001/DeathlyHallows?type=stone </div>
        <div>3. Elder Wand - https://localhost:7001/DeathlyHallows?type=wand </div>
    </div>
    <div class="row">
        <div class="col-3">TotalViews:</div>
        <div class="col-4">
            <span id="totalViewCounter"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-3">TotalUsers:</div>
        <div class="col-4">
            <span id="totalUserCounter"></span>
        </div>
    </div>
</div>



<div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
    <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
        
        <div class="toast-body bg-gradient bg-success text-white">
            <span id="liveToastMessage"></span>
        </div>
    </div>
</div>

<script src="~/js/signalr.js"></script>

<script type="module" src="~/js/connectionHub.js"></script>
<script type="module" src="~/js/counters.js"></script>
<script type="module" src="~/js/deathlyHallows.js"></script>
<script type="module" src="~/js/manageHouses.js"></script>
<script type="module" src="~/js/hubInteraction.js"></script>






